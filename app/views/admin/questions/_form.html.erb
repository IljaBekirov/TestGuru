<%= form_with(model: [:admin, @test, @question], local: true) do |form| %>
  <%= render 'shared/errors', resource: question %>

  <p>
    <%= form.label 'Вопрос' %><br>
    <%= form.text_area :body %>
  </p>

  <%= form.submit %> |

  <%= button_back(admin_test_path(@question.test || @test)) %>
<% end %>
