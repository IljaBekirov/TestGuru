<table class="table table-hover">
  <thead class="bg-primary text-light">
  <tr>
    <th></th>
    <th>Вопрос</th>
    <th>Ответов</th>
    <th colspan="3" style="text-align: center;">Действия</th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.body %></td>
      <td><%= question.answers.count %></td>
      <td><%= link_to "Просмотр", admin_question_path(question) %></td>
      <td><%= link_to "Редактировать", edit_admin_question_path(question) %></td>
      <td><%= link_to "Удалить", admin_question_path(question), method: :delete, data: { confirm: "Вы уверены, что хотите удалить?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
