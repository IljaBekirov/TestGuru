<table>
  <thead>
  <tr>
    <th>id</th>
    <th>Body</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.body %></td>
      <td><%= link_to "Просмотр", question_path(question) %> |</td>
      <td><%= link_to "Редактировать", edit_question_path(question) %>  |</td>
      <td><%= link_to "Удалить", question_path(question), method: :delete, data: { confirm: "Вы уверены, что хотите удалить?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
