<h1>Вопросы для теста '<%= @test.title %>'</h1>

<table>
  <thead>
  <tr>
    <th>id</th>
    <th>Body</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.body %></td>
      <td><%= link_to "Просмотр", test_question_path(id: question.id) %></td>
      <td><%= link_to "Удалить", test_question_path(id: question.id), method: :delete, data: { confirm: "Вы уверены, что хотите удалить?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "Новый вопрос", new_test_question_path %>
<%= link_to "Назад", test_path(@test) %>